<Window x:Class="Hangman.View.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman.View"
        mc:Ignorable="d"
        Title="UserView" Height="600" Width="1000">
	<Grid>
		<ListView x:Name="listView" HorizontalAlignment="Left" Height="400" Margin="49,49,0,0" VerticalAlignment="Top" Width="400" ItemsSource="{Binding Path=Users}" SelectionChanged="listView_SelectionChanged">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Path = Name, Mode=TwoWay}"/>
				</GridView>
			</ListView.View>
		</ListView>
		<Image x:Name="image" HorizontalAlignment="Left" Height="400" VerticalAlignment="Top" Width="400" Margin="530,49,0,0"/>
		<TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="94,490,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="234"/>


	</Grid>
</Window>
